{
  "compilerOptions": {
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": false,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "baseUrl": "src",
      "paths": {
        "@services/*": ["services/*"],
        "@exec": ["exec/*"],
        "@bin/*": ["bin/*"],
        "@routes/*": ["routes/*"]
      }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/__tests__/*"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
